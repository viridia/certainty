{
  "opts": {
    "destination": "./doc/",
    "recurse": true,
    "template": "./node_modules/minami"
  },
  "source": {
    "include": [ "lib", "index.js" ],
    "includePattern": ".+\\.js(doc)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  }
}
